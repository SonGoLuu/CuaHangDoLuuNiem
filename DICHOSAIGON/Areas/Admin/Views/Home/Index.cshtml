                                'rgba(255, 213, 75, 0.2)',
                                'rgba(255, 78, 58, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(180, 63, 254, 1)',
                                'rgba(254, 63, 180, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(255, 213, 75, 1)',
                                'rgba(255, 78, 58, 1)'
                            ],

                            borderWidth: 1,
                            hoverOffset: 4

                        }]
                    },
                    options: {
                        ////option gì đó
                        plugins: {
                    labels: {
                      render: () => {}
                    }
                  },
                        scales: {
                yAxes: [{
                    display: true,
                    ticks: {
                        stepSize: 1,    // minimum will be 0, unless there is a lower value.
                        // OR //
                        beginAtZero: true   // minimum value will be 0.
                    }
                }]
            }

                    } // end option
                    })
                             }
                           };
                          $.ajax(option);
                          }

                          //hàm mới 3
    $(document).ready(setup3);
                            function setup3(){
                          var option={
                             type:"GET",
                             url:'/Admin/Home/Data3',
                             contentType:"application/json;charset=utf-8",
                             dataType:"json",
                             success: function(data)
                             {
            console.log(data);
                        var x_data=data[0];
                var y_data=data[1];
                        const ctx = document.getElementById('myChart3');
                const myChart3 = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: x_data,
                        datasets: [{
                            label: 'Doanh thu (VNĐ)',
                            data: y_data,
                            backgroundColor: [
                                'rgba(75, 192, 192, 0.2)'
                            ],
                            borderColor: 'rgb(75, 192, 192)',
                            tension: 0.1,
                            //fill: false,
                            borderWidth: 1,
                            hoverOffset: 4

                        }]
                    },
                    options: {
                        ////option gì đó
                        tooltips: {
                callbacks: {
                    label: function(tooltipItems, data) {
                        if(parseInt(tooltipItems.yLabel) >= 1000)
                        return tooltipItems.yLabel.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") + " VNĐ";
