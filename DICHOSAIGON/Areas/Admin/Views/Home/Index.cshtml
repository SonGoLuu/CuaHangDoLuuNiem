                           };
                          $.ajax(option);
                          } //end setup

                //hàm mới 2
                $(document).ready(setup2);
                            function setup2(){
                          var option={
                             type:"GET",
                             url:'/Admin/Home/Data2',
                             contentType:"application/json;charset=utf-8",
                             dataType:"json",
                             success: function(data)
                             {
            console.log(data);
                        var x_data=data[0];
                var y_data=data[1];
                        const ctx = document.getElementById('myChart2');
                const myChart2 = new Chart(ctx, {
                    type: 'bar',
