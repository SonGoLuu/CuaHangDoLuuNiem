@model DICHOSAIGON.Models.Role

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
                        <div class="header-sub-title">
                            <nav class="breadcrumb breadcrumb-dash">
                                <a asp-area="Home" asp-controller="Admin" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                                <a class="breadcrumb-item" asp-area="Home" asp-controller="Admin" asp-action="AdminRoles">Danh sách quyền truy cập</a>
                                <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
                            </nav>
                        </div>
                    </div>
<form asp-action="Edit" asp-route-id = "@Model.RoleId" method = "post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RoleId" />   
    <div class="form-group">
        <div class="form-group col-md-6">
        <label class="col-sm-2 col-form-label">Role Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for= "RoleName" placeholder="Role Name">
        </div>
    </div>
    <div class="form-group col-md-6">
        <label class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for= "Description" placeholder="Description">
        </div>
    </div>
    <div class="form-group col-md-6">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        </div>
    </div>
    </div>
</form>

